{
    "name": "distributeur-automatique",
    "version": "1.0.0",
    "description": "Syst√®me de distributeur automatique avec gestion des stocks et des transactions",
    "main": "src/index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:essential": "jest --testNamePattern=essential",
        "test:essential:coverage": "jest --testNamePattern=essential --coverage",
        "test:minimal": "jest tests/*.minimal.test.js",
        "test:minimal:coverage": "jest tests/*.minimal.test.js --coverage",
        "test:clean": "npx jest --testPathPattern=clean",
        "test:clean:coverage": "npx jest --testPathPattern=clean --coverage",
        "start": "node server.js",
        "dev": "nodemon server.js"
    },
    "keywords": [
        "vending-machine",
        "automation",
        "javascript"
    ],
    "author": "Etudiant",
    "license": "MIT",
    "devDependencies": {
        "jest": "^29.7.0",
        "nodemon": "^3.0.2"
    },
    "dependencies": {
        "express": "^4.21.2"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/index.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "html",
            "lcov"
        ]
    }
}